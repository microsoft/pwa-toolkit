{
  "name": "api",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "type": "commonjs",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "test": "echo \"No tests yet...\"",
    "prisma:generateClient": "prisma generate",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "clean": "shx rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:package": "esbuild ./src/**/*.ts --sourcemap --platform=node --format=cjs --target=node16 --outdir=./dist/",
    "build": "NODE_ENV=production npm-run-all prisma:generateClient --parallel build:types build:package",
    "serve": "nodemon --watch ./dist/ -e js --exec node ./dist/index.js",
    "start": "NODE_ENV=development run-p \"build:package --watch\" serve",
    "start:prod": "NODE_ENV=production run-p \"build:package --watch\" serve"
  },
  "prisma": {
    "seed": "ts-node -T ./scripts/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "@sinclair/typebox": "^0.23.1",
    "apollo-server-core": "^3.6.1",
    "apollo-server-fastify": "^3.6.1",
    "apollo-server-plugin-base": "^3.5.0",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "fastify": "^3.25.0",
    "fastify-cookie": "^5.4.0",
    "fastify-cors": "^6.0.2",
    "fastify-formbody": "^5.2.0",
    "fastify-plugin": "^3.0.0",
    "graphql": "^15.0.0",
    "jose": "^4.3.7",
    "nexus": "^1.1.0"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/node": "^16.0.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.14.23",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prisma": "^3.7.0",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.0.0"
  }
}
